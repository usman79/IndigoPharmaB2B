@model IEnumerable<IndigoAdmin.DAL.Data.EF.Area>
@{
    ViewData["Title"] = "Areas";
}
<div class="main-content">
 
     <div class="card">
    <h2 class="card-header">Areas</h2>
    <div class="card-body">
        <p>
            @Html.ActionLink("Create New", "Create", new { @class = "btn btn-primary" })
        </p>
        <table class="table" id="areasTable">
            <thead>
                <tr>
                    <th>
                        Area
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.AreaId }) |
                    
                            @*@Html.ActionLink("Delete", "Delete", new { id = item.AreaId })*@
                        </td>
                    </tr>

                }
            </tbody>

        </table>
    </div>
    </div>
   </div>
 
  @section Scripts {
        <script>
            $("document").ready(function () {
                $("#areasTable").DataTable();
            });

        </script>
    }